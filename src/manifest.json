{
  "name": "YouTube Comment Search",
  "description": "Firefox extension for searching youtube video comments.",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/youtube-search-v1-48.png",
    "128": "icons/youtube-search-v1-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "https://*.youtube.com/*",
    "https://www.googleapis.com/youtube/v3/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_scripts/main.js"],
      "css": ["content_scripts/main.css"]
    }
  ],
  "browser_action": {
    "default_title": "firefox-ytcs-extension"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
